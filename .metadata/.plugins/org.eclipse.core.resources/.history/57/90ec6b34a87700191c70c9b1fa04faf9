package week_10;

import java.util.Scanner;

public class Ball {

	public static void main(String[] args) {
		Scanner in = new Scanner(System.in);
		int n = in.nextInt();
		int arr[][] = new int[n][3];
		
		int count=0;
		for (int i = 0; i < arr.length; i++) {
			for (int j = 0; j < 3; j++) {
				arr[i][j] = in.nextInt();
			}
		}
		for (int i = 0; i < arr.length; i++) {
			for (int j = 0; j < arr.length; j++) {
				int cnt = 0;
				
			}
			if (cnt==3) {
				count++;
			}
		}
		
		System.out.println(count);
		in.close();
	}

}
